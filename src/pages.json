{
    "pages": [
        //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
        {
            "path": "pages/index/index",
            "style": {
                "navigationBarTitleText": "首页"
            }
        },
        {
            "path": "pages/xrdemo/index",
            "style": {
                "navigationBarTitleText": "XR Demo",
                "usingComponents": {
                    "xr-start": "../../wxcomponents/xr-start/index"
                },
                "disableScroll": true
            }
        },
        {
            "path": "pages/ardemo/index",
            "style": {
                "navigationBarTitleText": "AR Demo",
                "usingComponents": {
                    "xr-ar": "../../wxcomponents/xr-ar/index"
                },
                "disableScroll": true
            }
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "uni-app",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8"
    }
}
